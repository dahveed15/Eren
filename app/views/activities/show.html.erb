<div class='center-contents'>
  <p><%= @activity.name %></p>
  <%= link_to('Edit Activity', edit_activity_path(@activity), method: :get)  %>
  <%= link_to('Archive Activity', archive_activity_path(@activity), method: :post)  %>
  <% if @activity.exercises.present? %>
    <div class='center-weight-data-table'>
      <table class='table-styling'>
        <tr>
          <td>Exercises</td>
          <td>Created At</td>
        </tr>
        <% @activity.exercises.each do |exercise| %>
          <tr>
            <td><%= "#{exercise.sets} sets of #{exercise.reps} reps at #{exercise.weight_value} #{exercise.units}" %></td>
            <td><%= exercise.created_at.strftime('%a, %b %-d, %Y') %></td>
          </tr>
        <% end %>
      </table>
    </div>
  <% else %>
    <p><%= "No exercises found." %></p>
  <% end %>
</div>
