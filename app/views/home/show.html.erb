<div class='center-contents'>
  <h1>Welcome to Eren, the best app ever!</h1>
  <div>
    <%= link_to "Add Activity", new_activity_path, class: 'add-activity-button' %>
    <p>All Activity</p>
    <div class='center-weight-data-table'>
      <table class='table-styling'>
        <tr>
          <td>Machine</td>
          <td>Most Recent Exercise</td>
          <td>New Exercise</td>
        </tr>
        <% @activities.each do |activity| %>
          <tr>
            <td><%= link_to activity.name, activity_path(activity) %></td>
            <% if activity.exercises.present? %>
              <td><%= "#{activity.exercises.last.sets} sets of #{activity.exercises.last.reps} reps at #{activity.exercises.last.weight_value} #{activity.exercises.last.units}" %></td>
            <% else %>
              <td></td>
            <% end %>
            <td><%= link_to "Add Exercise", new_activity_exercise_path(activity) %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
