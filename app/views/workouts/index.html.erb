<h1>Workouts</h1>

<% if @workouts.present? %>
  <div class='activity-button-container'>
      <% @workouts.each do |workout| %>
      <div class='activity-card'>
        <%= link_to workout_path(workout)  do %>
          <%= workout.name %>
        <% end %>
      </div>
      <% end %>
  </div>
<% else %>
  <p><%= "No workouts found." %></p>
<% end %>
